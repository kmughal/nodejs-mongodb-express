<main>
  <h1>Shop page</h1>
  <div class="grid">
    {{#if productExists}}
    {{#each products}}
    <article class="product-item">
      <header class="card__header">
        <h1 class="product__title">
          {{this.title}}
        </h1>
      </header>
      <picture class="card__image">
        <img src="https://cdn.pixabay.com/photo/2017/05/09/03/46/alberta-2297204_960_720.jpg" alt="dummy image">
      </picture>
      <p class="product_price">
        <h2>
          Â£ 14.34
        </h2>
      </p>
      <p class="product__description">
        Beautiful picture
      </p>
      <p class="card__actions">
        <button>Add to cart</button>
      </p>
    </article>
    {{/each}}
    {{else}}
    <p>No Products</p>
    {{/if}}
  </div>
</main>